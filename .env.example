# MinIO MCP Server Configuration
# Copy this file to .env and customize the values

# MinIO Server Connection (Required)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# Connection Settings (Optional)
MINIO_SECURE=false
MINIO_REGION=us-east-1

# MCP Server Settings (Optional)
MINIO_SERVER_NAME=minio-mcp-server
MINIO_SERVER_VERSION=0.1.0

# Logging Configuration (Optional)
MINIO_LOG_LEVEL=INFO
MINIO_LOG_FORMAT=<green>{time:YYYY-MM-DD HH:mm:ss}</green> | <level>{level: <8}</level> | {message}

# Operation Limits (Optional)
MINIO_MAX_OBJECTS_LIST=1000
MINIO_DEFAULT_PAGE_SIZE=100
MINIO_OPERATION_TIMEOUT=30

# Production MinIO Example
# MINIO_ENDPOINT=minio.example.com
# MINIO_ACCESS_KEY=your-access-key
# MINIO_SECRET_KEY=your-secret-key
# MINIO_SECURE=true
# MINIO_REGION=us-west-2
# MINIO_LOG_LEVEL=WARNING